<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loginpages.loginFragment">


    <TextView
        android:id="@+id/tw2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/advent_pro_bold"
        android:text="LOGIN"
        android:textColor="#050505"
        android:textSize="36dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/uname"
        android:layout_width="302dp"
        android:layout_height="50dp"
        android:layout_below="@id/tw2"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="70dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/shpe2"
        android:drawableEnd="@drawable/ic_baseline_alternate_email_24"
        android:hint="Someone@gmail.com"
        android:inputType="text"
        android:paddingStart="20dp"
        android:paddingRight="10dp" />

    <EditText
        android:id="@+id/pass"
        android:layout_width="302dp"
        android:layout_height="50dp"
        android:layout_below="@id/uname"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/shpe2"
        android:drawableEnd="@drawable/ic_baseline_lock_24"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingStart="20dp"
        android:paddingRight="10dp" />




    <TextView
        android:id="@+id/tw1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pass"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="20dp"
        android:text="Forgot password?" />

    <Button
        android:id="@+id/b1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tw1"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="100dp"
        android:background="@drawable/buttonbg"
        android:backgroundTint="@color/purple_200"
        android:text="Login"
        app:backgroundTint="@null" />


</RelativeLayout>